@page
@using StokTakip.Localization
@using StokTakip.Web.Pages.Products
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<StokTakipResource> L
@model StokTakip.Web.Pages.Products.SizeListModalModel
@{
    Layout = null;
}
<script type="text/javascript" src="~/Pages/Products/SizeListModal.js"></script>

<abp-modal centered="true" size="ExtraLarge">
    <abp-dynamic-form abp-model="sizes">
        <abp-modal-header title="@L["SizesProduct"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-modal-body>
                <abp-form-content />
                <abp-table striped-rows="true" id="sizeTable"></abp-table>
            </abp-modal-body>
        </abp-modal-body>
    </abp-dynamic-form>
    <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
</abp-modal>