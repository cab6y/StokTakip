@page
@using StokTakip.Localization
@using StokTakip.Web.Pages.Products
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<StokTakipResource> L
@model StokTakip.Web.Pages.Products.CreateModalModel
@{
    Layout = null;
}
<script type="text/javascript" src="~/Pages/Products/CreateModal.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="~/Pages/Products/CreateModal.css">

<style>
    .panel {
        padding-bottom: 10px;
    }

    #cam {
        border: 1px;
        border-color: black;
        border-style: solid;
    }

    #photo {
        border: 1px;
        border-color: black;
        border-style: dashed;
    }

</style>
<abp-dynamic-form abp-model="productInput" asp-page="/Products/CreateModal">
    <abp-modal centered="true" size="ExtraLarge">
        <abp-modal-header title="@L["NewProduct"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-modal-body>
                <div class="form-group">
                    <div class="panel">
                        <button id="switchFrontBtn" type="button"  style="display:none;">Front Camera</button>
                        <button id="switchBackBtn" type="button" class="btn btn-primary">Back Camera</button>
                        <button id="snapBtn" type="button" class="btn btn-primary">Snap</button>
                    </div>
                    <div style="width:10%">
                        <!-- add autoplay muted playsinline for iOS -->
                        <video id="cam" autoplay muted playsinline style="width:300px">Not available</video>
                        <canvas id="canvas" style="display:none"></canvas>
                        <img id="photo" style="width:300px" alt="The screen capture will appear in this box.">
                    </div>


                </div>
                <abp-form-content />
               @* <abp-input asp-for="UploadFileDtos.Name"></abp-input>

                <abp-input asp-for="UploadFileDtos.File"></abp-input>*@
               
               

            </abp-modal-body>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>